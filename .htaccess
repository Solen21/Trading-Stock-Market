<IfModule mod_rewrite.c>
    RewriteEngine On

    # Set your project base path
    RewriteBase /project/Abiel/

    # Redirect root access to login page
    RewriteRule ^$ public/login [R=301,L]

    # Remove direct .php access
    RewriteCond %{THE_REQUEST} \s/+(.+?)\.php[\s?] [NC]
    RewriteRule ^ %1 [R=301,L]

    # Rewrite clean URLs to .php files
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME}.php -f
    RewriteRule ^(.*)$ $1.php [L]

    # Custom 404 page
    ErrorDocument 404 /project/Abiel/public/404
</IfModule>
